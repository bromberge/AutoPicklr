modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["openssl", "postgresql"]

# Replit Autoscale uses this section when deploying
[deployment]
deploymentTarget = "autoscale"
# IMPORTANT: use uvicorn (ASGI), not plain gunicorn
run = ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8080"]

[workflows]
runButton = "Project"

# Click "Run" starts these tasks; we also use uvicorn here
[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "install_dependencies"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
# IMPORTANT: uvicorn, not gunicorn
args = "uvicorn main:app --host 0.0.0.0 --port 8080"
waitForPort = 8080

[[workflows.workflow]]
name = "install_dependencies"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
# Add your deps here. 'uvicorn[standard]' pulls in useful extras.
args = "uv add fastapi 'uvicorn[standard]' sqlmodel httpx jinja2"

# Ports Replit exposes; we run on 8080
[[ports]]
localPort = 8080
externalPort = 8080
